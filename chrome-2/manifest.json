{
   "manifest_version": 2,
   "name": "Secret",
   "version":"0.6" ,
   "description": "Extension for SECRET",
   "permissions": [
      "activeTab",
      "declarativeContent",
      "<all_urls>",
      "storage",
      "contextMenus"
   ],
   "background": {
      "page":"./background/main.html",
      "persistent": false
   },
   "content_scripts": [
      {
      "matches": ["<all_urls>"],
      "js": ["./content/content.js"]
      }
   ],
   "browser_action": {
      "default_popup": "./popup/popup.html",
      "default_icon": "./icons/icon.png"
   } 
}